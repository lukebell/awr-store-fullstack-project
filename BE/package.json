{
  "name": "awr-store-backend-project",
  "version": "1.0.0",
  "description": "Take home evaluation project for backend engineering candidates",
  "author": "Alvin Lumowa",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "tsc:build": "tsc --project tsconfig.json --noEmit",
    "biome:format": "npx @biomejs/biome format --config-path=biome.json src",
    "biome:format-fix": "npx @biomejs/biome format --config-path=biome.json src --fix",
    "biome:lint": "npx @biomejs/biome lint --config-path=biome.json src",
    "quality": "npm run tsc:build && npm run biome:format && npm run biome:lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "prisma": {
    "schema": "src/modules/prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.1.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.20",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.20",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-fastify": "^11.0.20",
    "@nestjs/swagger": "^11.1.5",
    "@prisma/client": "^6.6.0",
    "axios": "^1.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-zod": "^4.3.1",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.3",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.20",
    "@suites/di.nestjs": "^3.0.1",
    "@suites/doubles.jest": "^3.0.1",
    "@suites/unit": "^3.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "jest": "^29.7.0",
    "prisma": "^6.6.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "src/modules/module-bis/generated/*",
      "src/modules/module-healthcheck/*",
      "src/modules/module-otel/*",
      "src/modules/module-config/*",
      "env.schema.ts",
      "logger.config.ts",
      ".module.ts",
      ".exception.ts",
      ".schema.ts",
      "main.ts",
      "index.ts"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "modulePaths": [
      "."
    ]
  }
}
